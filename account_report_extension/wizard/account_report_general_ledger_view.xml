<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="account_report_general_ledger_view_ext" model="ir.ui.view">
            <field name="name">General Ledger</field>
            <field name="model">account.report.general.ledger</field>
            <field name="inherit_id" ref="account.account_report_general_ledger_view" />
            <field name="arch" type="xml">           
	            <data>
			        <xpath expr="//page[@string='Journals']" position="after">
			            <page string="Accounting" name="account_ids">
				    	    <group>
					    	    <group>
					    	        <field name="from_account" on_change="onchange_account(from_account, to_account)"/>
					    	    </group>
					    	    <group>
					    	        <field name="to_account" on_change="onchange_account(from_account, to_account)"/>
					    	    </group>
				    	    </group>			                
                        	<field name="account_ids" context="{'search_default_attr':0}"/>
                    	</page>
			        </xpath>
	            </data>
            </field>
        </record>
    </data>
</openerp>
